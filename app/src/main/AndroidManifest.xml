<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gamestoreapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MainActivity">
        <activity
            android:name="com.example.gamestoreapp.activities.SimulationListActivity"
            android:label="Simulation Games"
            android:exported="true" />
        <activity
            android:name="com.example.gamestoreapp.activities.StrategyListActivity"
            android:label="Strategy Games"
            android:exported="true" />
        <activity
            android:name="com.example.gamestoreapp.activities.CasualListActivity"
            android:label="Casual Games"
            android:exported="true" />
        <activity
            android:name="com.example.gamestoreapp.activities.ActionListActivity"
            android:label="Action Games"
            android:theme="@style/ActionCategoryTheme"
            android:exported="true" />
        <activity
            android:name="com.example.gamestoreapp.activities.SearchActivity"
            android:exported="true" />
        <activity
            android:name="com.example.gamestoreapp.activities.DetailsActivity"
            android:exported="true" />
        <activity
            android:name="com.example.gamestoreapp.activities.MainActivity"
            android:label="Games Store"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>