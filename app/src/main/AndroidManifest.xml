<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gamestoreapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MainActivity">
        <activity
            android:name=".activities.ImageSwitcherActivity"
            android:exported="true" />
        <activity
            android:name=".activities.SimulationListActivity"
            android:exported="true"
            android:label="Simulation Games"
            android:theme="@style/SimulationCategoryTheme"
            android:configChanges="orientation|screenSize"/>
        <activity
            android:name=".activities.StrategyListActivity"
            android:exported="true"
            android:label="Strategy Games"
            android:theme="@style/StrategyCategoryTheme"
            android:configChanges="orientation|screenSize"/>
        <activity
            android:name=".activities.CasualListActivity"
            android:exported="true"
            android:label="Casual Games"
            android:theme="@style/CasualCategoryTheme"
            android:configChanges="orientation|screenSize"/>
        <activity
            android:name=".activities.ActionListActivity"
            android:exported="true"
            android:label="Action Games"
            android:theme="@style/ActionCategoryTheme"
            android:configChanges="orientation|screenSize"/>
        <activity
            android:name=".activities.SearchActivity"
            android:exported="true" />
        <activity
            android:name=".activities.DetailsActivity"
            android:exported="true" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:label="Games Store">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>