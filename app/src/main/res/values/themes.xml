<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MainActivity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue_background</item>
        <item name="colorPrimaryVariant">@color/darker_blue_background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/blue_gray_100</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:editTextColor">@color/blue_gray_100</item>
        <item name="android:textColorHint">@color/blue_gray_100</item>
    </style>
  
    <style name="ListViewItemTheme">
        <item name="android:backgroundTint">@color/dark_blue_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="ActionCategoryTheme" parent="Theme.MainActivity">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/dark_red</item>
    </style>
    <style name="CasualCategoryTheme" parent="Theme.MainActivity">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/orange_dark</item>
    </style>

    <style name="Theme.DetailsActivity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DetailsActivityPurchaseButton">
        <item name="backgroundTint">#00C853</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>