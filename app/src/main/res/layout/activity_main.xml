<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity"
    android:paddingTop="@dimen/full_margin"
    android:background="@color/dark_blue_background"
    android:theme="@style/Theme.MainActivity"
    >
    
    <SearchView
        android:id="@+id/main_search_view"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:scaleType="fitStart"
        android:layout_marginLeft="@dimen/full_margin"
        android:layout_marginRight="@dimen/full_margin"
        android:layout_marginBottom="@dimen/full_margin"
        android:background="@color/blue_background"
        android:iconifiedByDefault="false"
        android:queryHint="Search Games"
        />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/main_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
        <LinearLayout
            android:id="@+id/main_category_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/full_margin"
                android:layout_marginRight="@dimen/full_margin"
                android:layout_marginBottom="@dimen/full_margin"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/half_margin"
                    >
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_view_action"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/category_card_height"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@android:color/holo_red_light"
                        android:layout_marginEnd="@dimen/half_margin"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/action"
                            android:textSize="@dimen/category_card_name"
                            android:textAlignment="center"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_view_casual"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/category_card_height"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@android:color/holo_orange_light"
                        android:layout_marginStart="@dimen/half_margin"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/casual"
                            android:textSize="@dimen/category_card_name"
                            android:textAlignment="center"
                            />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/half_margin"
                    >
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_view_simulation"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/category_card_height"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@android:color/holo_blue_light"
                        android:layout_marginEnd="@dimen/half_margin"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/simulation"
                            android:textSize="@dimen/category_card_name"
                            android:textAlignment="center"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_view_strategy"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/category_card_height"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@android:color/holo_green_light"
                        android:layout_marginStart="@dimen/half_margin"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/strategy"
                            android:textSize="@dimen/category_card_name"
                            android:textAlignment="center"
                            />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_blue"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <Button
                    android:id="@+id/bestselling_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/full_margin"
                    android:text="@string/bestselling"
                    android:textAllCaps="false"
                    android:stateListAnimator="@null"
                    tools:ignore="ButtonStyle" />
                <Button
                    android:id="@+id/most_viewed_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/full_margin"
                    android:text="@string/most_viewed"
                    android:textAllCaps="false"
                    android:stateListAnimator="@null"
                    tools:ignore="ButtonStyle" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_blue"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name"
                    android:textColor="@color/light_blue"
                    android:textSize="@dimen/list_column_font"
                    android:layout_marginStart="130dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price"
                    android:textColor="@color/light_blue"
                    android:textSize="@dimen/list_column_font"
                    android:layout_marginStart="120dp"
                    />
            </LinearLayout>
            <ProgressBar
                android:id="@+id/main_progress_bar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/main_product_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/full_margin"
                android:layout_marginLeft="@dimen/full_margin"
                android:layout_marginRight="@dimen/full_margin"
                />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>