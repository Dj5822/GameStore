<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.DetailsActivity">

    <ImageView
        android:id="@+id/imageView"
        android:src="@drawable/TempImage"
        android:scaleType="centerCrop"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Game Name"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Studio"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/textView"></TextView>

    <TextView
        android:id="@+id/soldCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="8dp"
        android:text="100M +"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

    </TextView>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/SoldLabel"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/soldCount"
        app:layout_constraintStart_toStartOf="@+id/soldCount"
        app:layout_constraintTop_toBottomOf="@+id/soldCount">

    </TextView>

    <TextView
        android:id="@+id/viewCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:text="700M +"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/soldCount">

    </TextView>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/ViewLabel"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/viewCount"
        app:layout_constraintStart_toStartOf="@+id/viewCount"
        app:layout_constraintTop_toBottomOf="@+id/viewCount">

    </TextView>

    <Button
        android:id="@+id/purchaseButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#64DD17"
        android:text="Price here"
        app:layout_constraintEnd_toEndOf="@+id/viewCount"
        app:layout_constraintStart_toStartOf="@+id/soldCount"
        app:layout_constraintTop_toBottomOf="@+id/textView4"></Button>

    <ImageSwitcher
        android:id="@+id/gameImageSwitcher"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/purchaseButton"
        app:layout_constraintStart_toStartOf="@+id/purchaseButton"
        app:layout_constraintTop_toBottomOf="@+id/purchaseButton">
    </ImageSwitcher>

    <Button
        android:id="@+id/imageSwitchButton1"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#9E9E9E"
        android:translationX="-60dp"
        app:layout_constraintEnd_toEndOf="@+id/gameImageSwitcher"
        app:layout_constraintStart_toStartOf="@+id/gameImageSwitcher"
        app:layout_constraintTop_toBottomOf="@+id/gameImageSwitcher">
    </Button>

    <Button
        android:id="@+id/imageSwitchButton2"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#9E9E9E"
        android:translationX="-20dp"
        app:layout_constraintEnd_toEndOf="@+id/gameImageSwitcher"
        app:layout_constraintStart_toStartOf="@+id/gameImageSwitcher"
        app:layout_constraintTop_toBottomOf="@+id/gameImageSwitcher">
    </Button>

    <Button
        android:id="@+id/imageSwitchButton3"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#9E9E9E"
        android:translationX="20dp"
        app:layout_constraintEnd_toEndOf="@+id/gameImageSwitcher"
        app:layout_constraintStart_toStartOf="@+id/gameImageSwitcher"
        app:layout_constraintTop_toBottomOf="@+id/gameImageSwitcher">
    </Button>

    <Button
        android:id="@+id/imageSwitchButton4"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#9E9E9E"
        android:translationX="60dp"
        app:layout_constraintEnd_toEndOf="@+id/gameImageSwitcher"
        app:layout_constraintStart_toStartOf="@+id/gameImageSwitcher"
        app:layout_constraintTop_toBottomOf="@+id/gameImageSwitcher">
    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>